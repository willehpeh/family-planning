{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@family-planning/application": [
        "libs/family-planning-application/src/index.ts"
      ],
      "@family-planning/domain": ["libs/family-planning-domain/src/index.ts"],
      "@family-planning/infrastructure": [
        "libs/family-planning-infrastructure/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"],
  "references": []
}
