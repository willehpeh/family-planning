{
  "name": "family-planning",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/family-planning/src",
  "projectType": "application",
  "tags": [
    "family-planning:api"
  ],
  "targets": {
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "dependsOn": [
        "build"
      ],
      "options": {
        "buildTarget": "family-planning:build",
        "runBuildTargetDependencies": false
      },
      "configurations": {
        "development": {
          "buildTarget": "family-planning:build:development"
        },
        "production": {
          "buildTarget": "family-planning:build:production"
        }
      }
    },
    "docker-build": {
      "dependsOn": [
        "build"
      ],
      "command": "docker build -f apps/family-planning/Dockerfile . -t family-planning"
    }
  }
}
